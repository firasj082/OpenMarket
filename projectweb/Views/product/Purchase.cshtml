@{
}
<a asp-action="Purchase" class="btn btn-secondary">Clear</a>
<form asp-action="Search" asp-controller="product" method="post" style="float: right;">
        <input type="text" name="name" />
        <button type="submit" class="btn btn-primary" >Search </button>

</form>
<table class="table table-bordered table-striped">
    <thead>
        <tr><th>Product</th><th>Company</th><th>Location</th><th>Seller</th><th>Price</th></tr>
    </thead>
    <tbody>
        @if (Model.Count != 0)
        {
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.productname</td>
                    <td>@product.Company</td>
                    <td>@product.Location</td>
                    <td>@product.user.Username</td>
                    <td>@product.Price$</td>
                    <td>
                        <a asp-controller="product" asp-action="Buy" asp-route-id="@product.productid">Buy</a>
                    </td>
                </tr>
            }

        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">No other user is selling.</td>
        </tr>
        }

    </tbody>
</table>
<br />