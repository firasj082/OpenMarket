@{
    ViewBag.Title = "Profile";
}
<form asp-action="Edit" method="post">

    <div class="form-group">
        <label asp-for="productname">Product Name</label>
        <input asp-for="productname" class="form-control" required minlenght="5" maxlength="12">
        <label asp-for="Location">Location</label>
        <input asp-for="Location" class="form-control" required  minlength="6" placeholder=" city-country" />
        <label asp-for="Company">Company</label>
        <input asp-for="Company" class="form-control" required  minlength="2" />
        <label asp-for="Price">Price</label>
        <input asp-for="Price" class="form-control" required  minlength="1" />
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        <input type="hidden" asp-for="productid" />
        <input type="hidden" asp-for="userid" value="@ViewBag.Key" />
    </div>
    <br/>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="product" asp-action="ShowMy" class="btn btn-primary" style="float:right;">Cancel</a>
</form>