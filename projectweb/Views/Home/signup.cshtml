@{
    ViewBag.Title = "Signup";
}

@model user





   


<form asp-action="Signup" asp-controller="Home" method="post" class="container row justify-content-center" >
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class ="col-md-4">
    <label for="username" class="form-label">Enter Name</label>
       
        <input type="text" id="username" name="username" class="form-control mb-3" required minlenght="5" maxlength="12">

    <label for="password" class="form-label">Enter Password</label>
        <input type="password" id="password" name="password" class="form-control mb-3" required minlength="8">

    <label for="email" class="form-label">Enter Email</label>
        <input type="email" id="email" name="email" class="form-control mb-3" required minlenght="17">

    <label for="phone" class="form-label">Enter Phone</label>
        <input type="text" id="phone" name="phone" class="form-control mb-3" required placeholder=" 056-8888818" minlength="10" maxlenth="10" >

    <label for="ccnum" class="form-label">Enter Credit Card</label>
        <input type="text" id="ccnum" name="ccnum" class="form-control mb-3" required placeholder="11234566" minlength="10" maxlenth="10">

    <input type="hidden" asp-for="userid" />
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="Home" asp-action="Login" class="btn btn-secondary ms-2">Cancel</a>
    </div>
</form>
